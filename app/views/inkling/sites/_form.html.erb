<% form_for @site do |f| %>
    <% unless @site.new_record? %>
        <%= f.hidden_field :id %>
    <% end %>
    

    <%= f.text_field :name, :label => "name" %>
    <%= f.text_area :description, :label => "description" %>
    <!--
    this will be a drop down for users (owner of site)
   -->

    <%= submit_tag "Save" %>

<% end %>|