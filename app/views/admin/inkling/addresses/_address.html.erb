<li id="<%= address.id %>" class="tree-item">
  <span><%= address.content.name %> <%= address.id %> </span>

  (+)(edit link)

  <%= render(:partial => "content_form", :locals => {:address => address}) %>

  <% if address.children %>
    <ul>
      <%= render(:partial => "address", :collection => address.children) %>
    </ul>
  <% end %>
</li>
