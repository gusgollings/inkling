
<%= error_messages_for 'folder'%>

<%= form_for [:admin, @folder] do |f| %>
  <% unless @folder.new_record? %>
    <%= f.hidden_field :id %>
  <% end %>
  
  <%= f.hidden_field(:parent_folder_id, :value => params[:parent_folder_id]) if params[:parent_folder_id] %>
  <%= f.text_field :name, :label => "Name" %>

  <%= submit_tag 'Save' %>
<% end %>
