
<%= error_messages_for 'foo'%>

<%= form_for [:admin, @foo] do |f| %>
  <% unless @foo.new_record? %>
    <%= f.hidden_field :id %>
  <% end %>

  <%= f.hidden_field :folder_id => params[:folder_id] if params[:folder_id] %>

  <%= f.text_field :name, :label => "Name" %>

  <%= submit_tag 'Save' %>
<% end %>
